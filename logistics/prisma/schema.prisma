generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  role          String
  createdAt     DateTime  @default(now())
  emailVerified DateTime?
  resetExpires  DateTime?
  resetToken    String?   @unique

  // Back relation: A manager can have many driver assignments
  managerDrivers manager_driver[] @relation("ManagerToDriver")
}

// ... (Previous content remains same until Ride model)

model Ride {
  id           String    @id @default(cuid())
  userId       String
  driverId     String    // The Manager who negotiated the deal
  pickup       String
  dropoff      String
  status       String
  offerPrice   Float?
  counterPrice Float?
  createdAt    DateTime  @default(now())
  confirmedAt  DateTime?
  completed    Boolean   @default(false)
  dropoffLat   Float?
  dropoffLon   Float?
  pickupLat    Float?
  pickupLon    Float?

  // --- Manager-Driver Assignment Fields ---
  managerId              String?   // Explicit link to the Manager (User)
  assignedDriverId       String?   // The actual driver executing the ride
  assignmentStatus       String    @default("pending_assignment") // pending_assignment, assigned, in_progress, completed
  driverVerificationCode String?   // The unique 6-digit code
  isDriverVerified       Boolean   @default(false)
  
  // Relations
  assignedDriver         Driver?   @relation("AssignedDriver", fields: [assignedDriverId], references: [id])
}

// Update Driver model to include the relation
model Driver {
  id               String            @id @default(cuid())
  fullName         String
  phone            String
  email            String            @unique
  vehicleType      String
  vehicleNumber    String
  licenseNumber    String
  experienceYears  Int
  address          String
  createdAt        DateTime          @default(now())
  isActive         Boolean           @default(false)
  driver_locations driver_locations?
  
  managerDrivers   manager_driver[]  @relation("DriverToManager")
  assignedRides    Ride[]            @relation("AssignedDriver") // New relation
}

// ... (Rest of the schema remains same)

model driver_locations {
  driver_email String                   @id
  location     Unsupported("geography")
  updated_at   DateTime?                @default(now()) @db.Timestamp(6)
  Driver       Driver                   @relation(fields: [driver_email], references: [email], onDelete: Cascade, onUpdate: NoAction)
}

model manager_driver {
  manager_id  String
  driver_id   String
  assigned_at DateTime @default(now())

  // Relation to User (manager)
  manager User @relation("ManagerToDriver", fields: [manager_id], references: [id])

  // Relation to Driver
  driver  Driver @relation("DriverToManager", fields: [driver_id], references: [id])

  @@id([manager_id, driver_id])
}

/// This table contains check constraints and requires additional setup for migrations.
/// Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}


